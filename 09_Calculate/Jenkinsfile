pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello jenkins'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'ls -l'
                sh 'docker compose -f ./8_Calculator/8_Calculator/docker-compose.yml build'
            }
        }
		stage('Start Docker Container') {
            steps {
                sh 'docker compose -f ./8_Calculator/8_Calculator/docker-compose.yml up -d'
            }
        }
    }
}
